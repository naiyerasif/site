---
import "../styles/main.scss";
import PageInfo from "./PageInfo.astro";
import Critical from "./Critical.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import ClientBase from "./ClientBase.astro";
import ClientExtended from "./ClientExtended.astro";

const { pageInfo, ...attribs } = Astro.props;
const hero = Astro.slots.has("hero");
const sidekick = Astro.slots.has("sidekick");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<PageInfo {pageInfo}/>
		<Critical/>
	</head>
	<body>
		<Header/>
		{hero && <div class="hero"><slot name="hero"/></div>}
		<main id="content" {...attribs}>
			<slot/>
		</main>
		{sidekick && <div class="sidekick"><slot name="sidekick"/></div>}
		<Footer/>
		<ClientBase/>
		<ClientExtended/>
	</body>
</html>
