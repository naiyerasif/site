---
import "../styles/main.scss";
import PageInfo from "./PageInfo.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import BackToTop from "~components/BackToTop.astro";

const { pageInfo, ...attribs } = Astro.props;
const hero = Astro.slots.has("hero");
const sidekick = Astro.slots.has("sidekick");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<PageInfo {pageInfo}/>
	</head>
	<body>
		<Header/>
		{hero && <section class="hero"><slot name="hero"/></section>}
		<main id="content" {...attribs}>
			<slot/>
		</main>
		{sidekick && <section class="sidekick"><slot name="sidekick"/></section>}
		<Footer/>
		<aside class="floating-back-to-top">
			<BackToTop/>
		</aside>
		<script src="/vendor/lite-yt-embed@0.3.0.js" is:inline async></script>
	</body>
</html>
