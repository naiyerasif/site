---
import Icon from "../components/Icon.astro";
import CommandBar from "../components/CommandBar.astro";
import siteInfo from "../modules/website/index.js";

const logoAlt = `${new URL(siteInfo.siteBase).host}'s logo'`;
---

<header class="header" id="header">
	<div class="navbar-primary">
		<a href="/" class="brand" style="--brandSize:1.7rem">
			<img src="/favicon.svg" alt={logoAlt} style="width:var(--brandSize);height:var(--brandSize)">
		</a>
	</div>
	<nav class="navbar-secondary">
		<a href="/posts/" class="nav-item">Posts</a>
		<a href="/about/" class="nav-item">About</a>
		<theme-switcher class="nav-item">
			<button type="button" role="switch" aria-live="polite" aria-checked="true" aria-label="Switch theme" data-theme-switch>
				<Icon name="moon" data-theme-state="dark"/>
				<Icon name="sun" data-theme-state="light"/>
			</button>
		</theme-switcher>
		<CommandBar class="nav-item"/>
	</nav>
</header>
