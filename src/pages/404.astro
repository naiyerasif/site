---
import Layout from "../layouts/MinimalLayout.astro";
import CommandBar from "../components/CommandBar.astro";

const pageInfo = {
	title: "Page not found",
	url: Astro.url.pathname
};
---
<Layout {pageInfo} class="glitch">
	<section>
		<img src="/favicon.svg" alt="glitchy logo" class="glitch-logo">
		<random-message selector="p">
			<p>Page not here anymore</p>
			<p hidden>Page not available</p>
			<p hidden>Page not found</p>
		</random-message>
		<ul>
			<li><CommandBar hrefText="Search this site"/></li>
			<li><a href="/">Return to the homepage</a></li>
		</ul>
	</section>
</Layout>
