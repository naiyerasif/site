---
import Time from "./Time.astro";
import { postPathname } from "../modules/website/index.js";

const { entry } = Astro.props;
const path = postPathname(entry.slug);
---

<div class="content card">
	<div class="card-details">
		<span class="card-type">{entry.data.type}</span> &mdash;
		<Time date={entry.data.date} />
	</div>
	<div class="card-header">
		<a href={path}>{entry.data.title}</a>	
	</div>
	{entry.data.tagline ? 
		<div class="card-tagline">{entry.data.tagline}</div> :
		<div class="card-body">{entry.data.description}</div>}
</div>
