---
import Icon from "./Icon.astro";
import { pageInfoSchema } from "~schema";

const pageInfo = pageInfoSchema.parse(Astro.props.pageInfo);
---

<div class="edit-panel">
	<a href={pageInfo.source} rel="noopener noreferrer" class="button-link with-text">
		<Icon name="edit-line" class="gap-end-small"/> Edit this post
	</a>
</div>
