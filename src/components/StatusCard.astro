---
import { render } from "astro:content";
import Time from "./Time.astro";
import Icon from "./Icon.astro";
import { postPathname } from "../modules/website/index.js";

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<div class="content card status">
	<div class="card-details">
		<a href={postPathname(entry.id)} title={entry.data.title}><Icon name="beacon"/></a>
		<span class="card-type">status</span> &mdash;
		<Time date={entry.data.date} />
	</div>
	<Content />
</div>
